<%- include('../partials/header.ejs') %>

<main class="container">
    <h1 class="my-4">Postly - Dashboard</h1>
    <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
        <h2 class="my-2">Your Submissions</h2>
        <a href="/post/create" class="btn btn-primary">Create Post +</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Post</th>
                <th scope="col">Score</th>
            </tr>
        </thead>
        <tbody>
            <% for (const submission of user.submissions) { %>
                <tr>
                    <td>
                        <a href="/post/results/<%= submission.id %>"><strong><%= submission.post.title %></strong></a>
                        <br>
                        <small><%= submission.post.description %></small>
                    </td>
                    <td>
                        <%= submission.score %>%
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</main>

<%- include('../partials/footer.ejs') %>